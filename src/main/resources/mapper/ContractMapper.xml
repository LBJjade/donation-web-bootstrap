<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.becheer.donation.dao.ContractMapper">

    <resultMap id="MemberContractResultMap" type="com.becheer.donation.model.extension.contract.MemberContractExtension">
        <id column="id_" jdbcType="BIGINT" property="id" />
        <result column="contract_name" jdbcType="VARCHAR" property="contractName" />
        <result column="donator_sign_time" jdbcType="TIMESTAMP" property="signTime" />
        <result column="contract_amount" jdbcType="BIGINT" property="contractAmount" />
        <result column="enable_" jdbcType="INTEGER" property="enable" />
    </resultMap>

    <resultMap id="MemberContractDetailResultMap" type="com.becheer.donation.model.extension.contract.MemberContractExtension">
        <id column="id_" jdbcType="BIGINT" property="id" />
        <result column="contract_name" jdbcType="VARCHAR" property="contractName" />
        <result column="donator_sign_time" jdbcType="TIMESTAMP" property="signTime" />
        <result column="contract_amount" jdbcType="BIGINT" property="contractAmount" />
        <result column="enable_" jdbcType="INTEGER" property="enable" />
    </resultMap>

    <select id="SelectContractByMemberId" parameterType="java.lang.Long" resultMap="MemberContractResultMap">
        SELECT
            id_,
            contract_name,
            donator_sign_time,
            contract_amount,
            enable_
        FROM dnt_contract
        WHERE member_id=#{memberId,jdbcType=BIGINT}
    </select>

    <select id="SelectContractDetail" parameterType="java.lang.Long" resultMap="MemberContractDetailExtension">
        SELECT
            id_,
            contract_name,
            contract_amount,
            donated_amount,
            begin_time,
            end_time,
            donator_sign_time,
            enable_
        FROM dnt_contract
        WHERE id_=#{contractId,jdbcType=BIGINT}
    </select>
</mapper>